<!--Meta-->
	<meta charset="utf-8">
	<meta name="description" content="A language learning experience integrated with entertainment.">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="apple-moble-web-app-capable" content="yes">
	<meta name="mobile-web-app-capable" content="yes">

<!--Styling-->
	<%= favicon_link_tag 'favicon.png', type: 'image/png', sizes: '16x16', width: '16px' %>
	<%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900', type: 'text/css' %>
	<%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Noto+Sans:400,700', type: 'text/css' %>
	<%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js' %>
	<%= javascript_include_tag '//ricostacruz.com/jquery.transit/jquery.transit.min.js' %>

<!--Toolbar-->
	<div class="toolbar">
		<div class="toolbarContents">
			<h1 class="toolbar"><%= link_to "Peck", root_path, class: "no" %></h1>

		<% if logged_in? %>
			<%= link_to "Profile", current_user, class: 'button no tools', id:'profile' %>
			<%= link_to "Log out", logout_path, class: "button no tools", id: 'logout', method: "delete" %>
			

			<% else %>
				<%= link_to "Sign up", signup_path, class: "button no tools", id: 'signup' %>
				<%= link_to "Log in", login_path, class: "button no tools", id: 'login' %>
			<% end %>
		</div>
	</div>